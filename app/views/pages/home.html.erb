<!-- BANNER -->
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1568605117036-5fe5e7bab0b7?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1050&q=80);">
  <div class="container-search">
    <div class="search col-4">
      <h1>Drive anywhere, at the best price</h1>
      <p>Compare rental car deals to find the right one!</p>
      <div class="search-bar mb-4 text-center">
      <%= form_tag automobiles_path, method: :get, class: 'row col-12 ps-2 text-center' do %>
        <%= text_field_tag :location_query, params[:location_query], class: "form-control col-6 col-md-3", placeholder: "Location" %>
        <%= text_field_tag :price_query, params[:price_query], class: "form-control col-6 col-md-3", placeholder: "Price" %>
        <%= text_field_tag :km_query, params[:km_query], class: "form-control col-6 col-md-3", placeholder: "Km" %>
        <%= text_field_tag :model_brand_query, params[:model_brand_query], class: "form-control col-6 col-md-3", placeholder: "Model/Brand" %>
        <%= submit_tag "Search", class: "mt-2 col-12 fas fa-search" %>
      <% end %>
      </div>
    </div>
  </div>
</div>

<!-- CARDS -->
<div class="container-reviews">
  <h1 class="mt-4 text-left">Explore the most popular cars</h1>
  <p class="text-left mt-2 mb-4">Over 1,000 user reviews, with an average rating of 4.8 out of 5 stars.</p>
  <div class="row">
    <% @automobiles.each do |automobile| %>
    <div class="col-12 col-md-6 col-lg-4 col-xl-3 col-xxl-2">
      <div class="card-trip">     
        <%= cl_image_tag automobile.photo.key %>
        <div class="card-trip-infos">
          <div>
            <%= link_to automobile_path(automobile) do %>
            <h2><%= automobile.brand %> <%= automobile.model %></h2>
            <% end %>
            <p class="pt-2"><%= "#{automobile.year} | #{automobile.km} Km" %></p>
          </div>
          <h2 class="card-trip-pricing">$<%= "#{automobile.price} daily"%></h2>
          <%= cl_image_tag automobile.user.photo.key, class: 'card-trip-user avatar-bordered' %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
