<div class="container">
  <%= simple_form_for [ @automobile, @booking ] do |f| %>
    <h1>Choose when and just enjoy your car!</h1>
    <div class="form-row">
      <%= f.input :starting_date, as: :date, required: true, error: 'Starting date is mandatory, please specify one', input_html: {class: "datepicker"} %>
      <%= f.input :finish_date, as: :date, required: true, error: 'Finishing date is mandatory, please specify one', input_html: {class: "datepicker"} %>
    </div>
    <%= f.submit "Pay now", class: "btn btn-primary" %>
  <% end %>
    <%= link_to "Go back to car details", automobile_path(@automobile), class: "btn btn-primary my-3" %>
</div>
