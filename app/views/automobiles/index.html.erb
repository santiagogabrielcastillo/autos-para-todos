<!-- CARDS -->

<div class="container">
  <h1 class="mt-4 text-left">Los autos que siempre quisiste, al mejor precio</h1>
  <p class="text-left mt-2 mb-4">Más de 1.000 evaluaciones de usuarios, con una valoración media de 4.5 de 5 estrellas.</p>
  <div class="row">
    <% @automobiles.each do |automobile| %>
    <div class="col-12 col-md-6 col-lg-4">
      <div class="card-trip">
        <%= cl_image_tag automobile.photo.key %>
        <div class="card-trip-infos">
          <div>
            <h2><%= link_to "#{automobile.brand}, #{automobile.model}", automobile_path(automobile) %></h2>
            <p><%= "#{automobile.year} | #{automobile.km} Km" %></p>
          </div>
          <h2 class="card-trip-pricing"><%= "$#{automobile.price} a day" %></h2>
          <%= cl_image_tag automobile.user.photo.key, class: "card-trip-user avatar-bordered" %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
