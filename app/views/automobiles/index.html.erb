<!-- CARDS -->
<div class="container">
  <h1 class="mt-4 text-center">Los autos que siempre quisiste, al mejor precio</h1>
  <p class="text-center mt-2 mb-4">Más de 1.000 evaluaciones de usuarios, con una valoración media de 4.5 de 5 estrellas.</p>
  <div class="row">
    <div class="col-12 col-md-6 col-lg-4">
    <% @automobiles.each do |automobile| %>
      <div class="card-trip">
        <% # cl_image_tag automobile.photo.key, height: 300, width: 400, crop: :fill # %>
        <div class="card-trip-infos">
          <div>
            <h2><%= "#{automobile.brand} #{automobile.model}" %></h2>
            <p><%= "#{automobile.year} | #{automobile.km} Km" %></p>
            <p><%= "#{automobile.user.photo.key}" %></p>
          </div>
          <h2 class="card-trip-pricing"><%= "$#{automobile.price} a day" %></h2>
          <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" />
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
