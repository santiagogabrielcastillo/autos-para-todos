<div class="container text-center">
  <h1 class="mt-4">Manage your cars</h1>
  <div class="d-flex justify-content-center">
    <div class="row my-3">
      <div class="col-12">
        <% if @automobiles.empty? %>
        <div class="d-flex flex-column">
          <p>Don't have a car yet? Not a problem! It just takes 2 minutes!</p>
          <%= link_to "Create your first car", new_automobile_path, class: 'btn btn-primary' %>
        </div>
        <% else %>
          <% @automobiles.each do |automobile| %>
            <div class="card-booking my-4">
              <%= cl_image_tag automobile.photo.key, height: 250 %>
              <h2 class="py-3 brand-model"><%= automobile.brand %> <%= automobile.model %></h2>
              <div class="card-booking-infos">
                <div class="automobile-info">
                  <p>Year: <%= automobile.year %></p>
                  <p><%= automobile.km %> km</p>
                </div>
                <div class="booking-info">
                  <p><%= "$#{automobile.price} daily" %></p>
                </div>
                <div class="fechas">
                  <%= link_to "Edit", edit_automobile_path(automobile), class: 'btn btn-primary' %>
                  <%= link_to "Delete", automobile_path(automobile), class: 'btn btn-primary', method: :delete, data: { confirm: "Are you sure?" } %>
                </div>  
              </div>
            </div>
            <% end %>
          </div>
        <% end %>
        <div class="col-12">
          <%= link_to "Add a new car", new_automobile_path, class: 'btn btn-primary mt-3' %>
        </div>
    </div>
  </div>
</div>
