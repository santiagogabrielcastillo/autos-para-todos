<div class="container">
  <h1 class="text-center">Manage your cars</h1>
  <div class="row">
    <% @automobiles.each do |automobile| %>
    <div class="col-12 col-md-6 col-lg-4">
      <div class="card-automobile">
        <%= cl_image_tag automobile.photo.key %>
        <h2><%= link_to "#{automobile.brand}, #{automobile.model}", automobile_path(automobile) %></h2>
        <div class="card-automobile-infos">
          <div>
            <p><%= "#{automobile.year} | #{automobile.km} Km" %></p>
          </div>
          <div>
            <%= link_to "Edit", edit_automobile(automobile), class: 'btn btn-primary' %>
            <%#= link_to "Delete", edit_automobile(automobile), class: 'btn btn-primary' %>
          </div>
          <div>
            <h5 class="card-automobile-pricing"><%= "$#{automobile.price} daily" %></h5>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>