<div class="container">
<h1 class="text-center my-3">Create a car!</h1>
<div class="d-flex">
  <div class="auto-new-form w-50">
      <%= simple_form_for @automobile do |f| %>
      <%= f.input :model %>
      <%= f.input :brand %>
      <%= f.input :km %>
      <%= f.input :year %>
      <%= f.input :price %>
      <%= f.input :address %>
      <%= f.input :category, collection: CATEGORIES %>
      <%= f.input :photo, as: :file %>
      <%= f.button :submit, class: 'btn btn-primary' %>
    <% end %>
  </div>
  <div id="car-new-image">
    <img src="https://images.unsplash.com/photo-1514316454349-750a7fd3da3a?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=634&q=80" alt="car">
  </div>
</div>
<%= link_to "Go back", owner_path, class: "btn btn-primary my-3" %>
</div>
