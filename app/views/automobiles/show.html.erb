
<div class="container">
  <div class="card-trip card-trip-infos my-3 rounded">
    <div class="show-header">
      <div class="d-flex align-items-center" id="car-name">
        <%= @automobile.model %> <%= @automobile.brand %>
      </div>
      <div class="d-flex align-items-center" id="owner-info">
        <div id="owner-name"><%= @automobile.user.full_name %></div>
        <% if @automobile.user.photo.attached? %>
          <%= cl_image_tag @automobile.user.photo.key, class: "avatar-round" %>
        <% else %>
          <img src="app/assets/images/photo_placeholder.png" alt="user" class="avatar-round">
        <% end %>
      </div> 
    </div>    
  </div>
   <!-- automobile photo -->
  <div class="car-info">
    <%= cl_image_tag @automobile.photo.key %>  
    <%# <img src="https://images.unsplash.com/photo-1489824904134-891ab64532f1?ixid=MXwxMjA3fDB8MHxzZWFyY2h8M3x8Y2FyfGVufDB8fDB8&ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=60" alt="">  %>
    <!-- automobile info -->
    <div id="car-info-text">
      <div>
        <h5>Modelo:</h5> <%= @automobile.model %>
        <h5>Marca:</h5> <%= @automobile.brand %>
        <h5>Categoria:</h5> <%= @automobile.category %>
        <h5>AÃ±o:</h5> <%= @automobile.year %>
        <h5>Km:</h5>  <%= @automobile.km %>     
        <%# aca va el form con la info del auto %>
      </div>
    </div>
  </div>
  <div class="mt-4 text-center">
    <%= link_to "volver a lista", automobiles_path, class: "btn btn-primary" %> 
    <%= link_to "reservar", new_automobile_booking_path(@automobile), class: "btn btn-primary" %>
  </div>
</div>